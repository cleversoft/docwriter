
doctype html
html
    head
        meta(charset="utf-8")
        meta(http-equiv="Content-type",    content="text/html;charset=UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")

        title #{title}

        link(rel="stylesheet", href="/bower_components/bootstrap/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="/bower_components/fontawesome/css/font-awesome.min.css")
        link(rel="stylesheet", href="http://fonts.googleapis.com/css?family=Noto+Sans:400,700,400italic&subset=latin,vietnamese")
        link(rel="stylesheet", href="/css/frontend.css")

        | <!--[if lt IE 9]>
        | <script src="/bower_components/html5shiv/dist/html5shiv.min.js"></script>
        | <script src="/bower_components/respond/dest/respond.min.js"></script>
        | <![endif]-->

        script(src="/bower_components/jquery/dist/jquery.min.js")

        block head
    body
        block content

        // Scroll to top button
        a#scrollUp.scrollup(href="javascript: void(0);")
            span.fa-stack
                i.fa.fa-square-o.fa-stack-2x
                i.fa.fa-chevron-up.fa-stack-1x

        script(src="/bower_components/bootstrap/dist/js/bootstrap.min.js")

        script.
            $(document).ready(function() {
                var $scroll = $('#scrollUp');
                $(window).on('scroll', function() {
                    $scroll.stop().animate({ bottom: $(window).scrollTop() >= 200 ? 0 : -50 }, 100);
                });

                $scroll.click(function() {
                    $('body,html').stop().animate({ scrollTop: 0 });
                });
            });

        block footerScript
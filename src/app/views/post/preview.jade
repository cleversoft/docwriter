doctype html
html
    head
        meta(charset="utf-8")
        meta(http-equiv="Content-type",    content="text/html;charset=UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")

        title #{title}

        link(rel="stylesheet", href="/vendor/bootstrap-theme/css/yeti.css")
        link(rel="stylesheet", href="/vendor/font-awesome/css/font-awesome.min.css")
        //link(rel="stylesheet", href="/asset/css/style.css")

        //if lt IE 9
            script(src="/vendor/html5shiv/html5shiv.min.js")
            script(src="/vendor/respond/respond.min.js")
    body
        section.text-center
            h1
                a(href="#{siteUrl}/post/#{post.slug}") #{post.title}

            small This guide is updated on #{moment(post.updated_date || post.created_date).format('YYYY-MM-DD HH:mm')}

            p(style="margin-top: 50px;") &copy; #{year} <a href="#{siteUrl}">#{appName}</a>. All rights reserved

        // Create a page breaker elements
        // For generating PDF
        div(style="page-break-after: always;")

        // Post content
        section
            div#content.d-post-content
                != marked(post.content)

        //if lt IE 9
            script(src="/vendor/jquery/jquery-1.10.2.min.js")

        //[if gte IE 9]><!
        script(src="/vendor/jquery/jquery-2.0.3.min.js")
        //<![endif]

        script(src="/vendor/bootstrap/js/bootstrap.min.js")

        script(type="text/javascript").
            $(document).ready(function() {
                $('#content')
                    // Style the table
                    .find('table')
                        .addClass('table table-bordered')
                        .end()
                    // Make the image responsive
                    .find('img')
                        .addClass('img-responsive img-thumbnail');
            });